<h1>Add Collaborator</h1>

<%= form_for [@article] do |f| %>

  <% if @article.errors.any? %>
     <div class="alert alert-danger">
       <h4>There are <%= pluralize(@article.errors.count, "error") %>.</h4>
       <ul>
         <% @article.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
  <% end %>

  <%= collection_check_boxes(:article, :user_ids, User.all - [f.object.user], :id, :email) do |u| %>
    <div class="checkbox">
      <%= u.label do %>
        <%= u.check_box %>
        <%= u.object.email %>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>